root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Remove multiple empty lines at EOF / inside files
max_line_length = off

[*.cs]
indent_style = space
indent_size = 4

# Usings
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

# Namespace style (modern, less vertical noise)
csharp_style_namespace_declarations = file_scoped:suggestion

# Reduce vertical whitespace noise
csharp_style_allow_blank_line_after_colon_in_constructor_initializer = false:suggestion
csharp_style_allow_blank_line_after_token_in_arrow_expression_clause = false:suggestion

# Prefer compact expressions
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_properties = true:suggestion