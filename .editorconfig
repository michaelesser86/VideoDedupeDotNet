root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
indent_style = space
indent_size = 4

# Make usings tidy
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

# Prefer file-scoped namespaces (modern .NET style)
csharp_style_namespace_declarations = file_scoped:suggestion

# Prefer var where obvious
csharp_style_var_when_type_is_apparent = suggestion
csharp_style_var_elsewhere = suggestion
csharp_style_var_for_built_in_types = suggestion

# Expression-bodied members (light)
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_properties = true:suggestion

# If you want stricter warnings later, we can tighten these.